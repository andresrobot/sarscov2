<div class="container p-4">
    <div class="row">
        {{#each registros}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                            <div class="card-title text-uppercase">
                                {{nombre}} {{apellidoP}}
                            </div>
                            
                        <p class="m-2">
                            {{email}}
                        </p>
                        <p>{{timeago created_at}}</p>
                        <a href="/registros/delete/{{id}}" class="btn btn-danger m-1">Borrar Registro</a>&nbsp;&nbsp;&nbsp;
                        
                        <a href="/registros/edit/{{id}}" class="btn btn-secondary m-1">Editar Registro</a>&nbsp;&nbsp;&nbsp;
                        <a href="/registros/temperatura/{{id}}" class="btn btn-warning m-1">Temperaturas y s√≠ntomas</a>
                        
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay registros</p>
                    <a href="/registros/add">Agregar registro</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>