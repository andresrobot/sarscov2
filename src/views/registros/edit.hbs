
<div class="container p-4">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class ="card ">
            <div class="card-body">
                <form action="/registros/edit/{{registro.id}}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{registro.nombre}}" class="form-control" name="nombre" placeholder="Nombre/s" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value="{{registro.apellidoP}}" class="form-control" name="apellidoP" placeholder="Apellido Paterno">
                    </div>
                    <div class="form-group">
                        <input type="text" value="{{registro.apellidoM}}" class="form-control" name="apellidoM" placeholder="Apellido Materno">
                    </div>                                          
                    <div class="form-group">
                        <input type="email" value="{{registro.email}}" name="email" class="form-control" name="email" placeholder="E-mail">
                    </div>

                    <div class="form-group">
                        <input type="text" value="{{registro.proyecto}}" class="form-control" name="proyecto" placeholder="Proyecto">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Guardar registro
                        </button>
                    </div>

                </form>
            </div>
        </div>
      </div>
    </div>
</div>